<%= javascript_include_tag 'project' %>

<h1>Projects</h1>

<div class="container home">
  <div class="row home-header">
    <div class="col-md-4 mr-auto">
      <button class="btn btn-primary mr-auto" id="new-project-button">New</button>
      <div class="project-popover is-hidden" id="new-project-popover">
        <%= form_with(model: @project, id: "new-project-form") do |f|  %>
          <div class="form-group">
            <%= f.text_field :name,  class: "form-control mr-sm-2", id: "project-name-input", type: "text", placeholder: "Name this project", autofocus: true %>
          </div>
          <%= f.submit "Save", class: "btn btn-outline-success my-2 my-sm-0" %>
          <button class="btn btn-secondary" id="cancel_project_popover">Close</button>
        <% end %>
      </div>
    </div>
    <div class="col-md-4">
      <h3 class="text-center">Projects</h3>
    </div>
    <div class="col-md-4 m1-auto">
      <button class="btn m1-auto">...</button>
    </div>
  </div>

  <div class="row home-projects" id="project-list">
    <% @projects.each do |project| %>
      <%= render 'project_card', project: project %>
    <% end %>
  </div>
</div>
